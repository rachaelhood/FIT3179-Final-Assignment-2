{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 360,
  "data": {"url":"data/SharkAttacks_Population_Merged.csv"},
  "title": "Monthly Injury Severity â€” 2019",
  "transform": [
    {"filter":{"field":"Year","equal":2019}},
    {"aggregate":[{"op":"count","as":"Attacks"}],"groupby":["Month ","Injury Severity "]}
  ],
  "mark":{"type":"line","point":true},
  "encoding":{
